@model _1000Words.Models.PhotoAlbum

@{
    ViewData["Title"] = "Create";
}

<h1>Select Album</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AlbumId" class="control-label"></label>
                <select asp-for="AlbumId" class="form-control" asp-items="ViewBag.AlbumId"></select>
            </div>
            <input type="hidden" asp-for="PhotoId" value="@ViewBag.PhotoId" />
            <div class="d-flex flex-row">
                <input type="submit" value="Save to Album" class="btn btn-primary mr-1 btn-sm" />
                <a href="javascript: history.go(-1)" class="btn btn-secondary btn-sm">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
