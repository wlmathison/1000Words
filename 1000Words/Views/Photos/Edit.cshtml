@model _1000Words.Models.ViewModels.PhotoEditViewModel

@{
    ViewData["Title"] = "Edit";
    var photoPath = "~/images/" + (Model.Photo.Path ?? "noimage.jpg");
}

<h1>Edit Photo</h1>

<hr />
<div id="controls">
    <button id="recordButton">Record</button>
    <button id="stopButton" disabled>Stop</button>
</div>

<div>
    <ul id="recordingsList"></ul>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Photo.Id" />
            <img class="card-img-top" src="@photoPath" asp-append-version="true" />
            <input type="hidden" asp-for="Photo.Path" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Photo.IsFavorite" /> @Html.DisplayNameFor(model => model.Photo.IsFavorite)
                </label>
            </div>
            <input type="hidden" asp-for="Photo.Date" />
            <input type="hidden" asp-for="Photo.UserId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
