@model _1000Words.Models.Photo

@{
    ViewData["Title"] = "Delete";
    var photoPath = "~/images/" + (Model.Path ?? "noimage.jpg");
}

<h1>Delete Photo</h1>

<h3>Are you sure you want to delete this photo?</h3>
<h6>This will remove the photo from any albums as well.</h6>
<div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <img class="card-img-top" src="@photoPath" asp-append-version="true" />
        </div>
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FormattedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FormattedDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="javascript: history.go(-1)" class="btn btn-secondary">Cancel</a>
    </form>
</div>
